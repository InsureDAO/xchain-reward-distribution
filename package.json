{
  "name": "xchain-reward-distribution",
  "version": "0.1.0",
  "description": "xchain reward distribution",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "solc": "docker run -v $(pwd):/sources ethereum/solc:0.8.10",
    "fork:up": "docker compose -f docker/docker-compose.yml up -d",
    "fork:down": "docker compose -f docker/docker-compose.yml down",
    "hardhat:compile": "npx hardhat compile --no-typechain && npx hardhat typechain",
    "setup:mainnet": "npx hardhat run scripts/hardhat/setup.ts --network mainnetFork",
    "setup:arb": "npx hardhat run scripts/hardhat/setup.ts --network arbitrumFork",
    "setup:op": "npx hardhat run scripts/hardhat/setup.ts --network opFork",
    "setup": "npm run setup:mainnet && npm run setup:arb && npm run setup:op",
    "deploy:core-mainnet": "npx hardhat run scripts/hardhat/01.deploy-mainnet-core.ts --network mainnetFork",
    "deploy:core-arb": "npx hardhat run scripts/hardhat/02.deploy-l2-core.ts --network arbitrumFork",
    "deploy:core-op": "npx hardhat run scripts/hardhat/02.deploy-l2-core.ts --network opFork",
    "deploy:root-arb": "TARGET=arbitrumFork npx hardhat run scripts/hardhat/03.deploy-root-gauges.ts --network mainnetFork",
    "deploy:root-op": "TARGET=optimismFork npx hardhat run scripts/hardhat/03.deploy-root-gauges.ts --network mainnetFork",
    "deploy:child-arb": "npx hardhat run scripts/hardhat/04.deploy-child-gauges.ts --network arbitrumFork",
    "deploy:child-op": "npx hardhat run scripts/hardhat/04.deploy-child-gauges.ts --network opFork"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/InsureDAO/xchain-reward-test.git"
  },
  "author": "InsureDAO",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/InsureDAO/xchain-reward-test/issues"
  },
  "homepage": "https://github.com/InsureDAO/xchain-reward-test#readme",
  "dependencies": {
    "commander": "^11.0.0",
    "viem": "^1.2.9"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.0.2",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomiclabs/hardhat-vyper": "^3.0.3",
    "@types/node": "^20.3.3",
    "dotenv": "^16.3.1",
    "hardhat": "^2.17.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "volta": {
    "node": "18.16.1"
  },
  "engines": {
    "node": "^18.16.1",
    "npm": "^9.5.1"
  }
}
